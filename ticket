import json

def create_html_table(json_file_path, output_html_path):
    # Read JSON file
    with open(json_file_path, 'r') as f:
        data = json.load(f)
    
    # Ensure data is a list
    if not isinstance(data, list):
        data = [data]
    
    html_content = """<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 20px;
            background-color: #f5f7fa;
        }
        .email-table {
            border-collapse: collapse;
            width: 100%;
            max-width: 800px;
            margin: 0 auto;
            background-color: #ffffff;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            overflow: hidden;
        }
        .email-table td {
            padding: 12px 20px;
            border-bottom: 1px solid #e5e7eb;
            font-size: 14px;
        }
        .email-table tbody tr:hover {
            background-color: #eff6ff;
        }
        .label {
            color: #1e40af;
            font-weight: 600;
            font-size: 12px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }
        .value {
            color: #1f2937;
            margin-left: 5px;
        }
        .ticket-value {
            background-color: #dbeafe;
            color: #1e40af;
            padding: 4px 10px;
            border-radius: 4px;
            font-weight: 600;
            font-size: 13px;
        }
        .line-text {
            color: #6b7280;
            font-style: italic;
            font-size: 13px;
            line-height: 1.5;
        }
        .separator {
            padding: 8px !important;
            background: linear-gradient(135deg, #1e3a5f 0%, #2563eb 100%);
        }
        .cell {
            width: 50%;
        }
    </style>
</head>
<body>
    <table class="email-table">
        <tbody>
"""
    
    for i, entry in enumerate(data):
        ticket = entry.get('ticket', 'N/A')
        date = entry.get('date', 'N/A')
        found_in = entry.get('found_in', 'N/A')
        imei = entry.get('imei', 'N/A')
        line = entry.get('line', 'N/A')
        
        # Add separator between entries (except before first)
        if i > 0:
            html_content += """            <tr>
                <td colspan="2" class="separator"></td>
            </tr>
"""
        
        html_content += f"""            <tr>
                <td class="cell"><span class="label">Ticket:</span> <span class="ticket-value">{ticket}</span></td>
                <td class="cell"><span class="label">Date:</span> <span class="value">{date}</span></td>
            </tr>
            <tr>
                <td class="cell"><span class="label">Found In:</span> <span class="value">{found_in}</span></td>
                <td class="cell"><span class="label">IMEI:</span> <span class="value">{imei}</span></td>
            </tr>
            <tr>
                <td colspan="2"><span class="label">Line:</span> <span class="line-text">{line}</span></td>
            </tr>
"""
    
    html_content += """        </tbody>
    </table>
</body>
</html>
"""
    
    # Write HTML file
    with open(output_html_path, 'w') as f:
        f.write(html_content)
    
    print(f"HTML file created: {output_html_path}")


# Usage
create_html_table('data.json', 'email_table.html')
